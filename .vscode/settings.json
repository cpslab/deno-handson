{
  "deno.enable": true,
  "deno.lint": true,
  "editor.formatOnSave": true,
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "request": "launch",
        "name": "deno run main.ts",
        "type": "node",
        "program": "${workspaceFolder}/main.ts",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "/deno/bin/deno",
        "runtimeArgs": ["run", "--watch", "--inspect", "--allow-net=:8000"],
        "attachSimplePort": 9229
      }
    ],
    "compounds": []
  }
}
